<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>mlvs.me — Control Center</title>
  <link rel="stylesheet" href="/style.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet" />
  <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
  <meta http-equiv="Pragma" content="no-cache" />
  <meta http-equiv="Expires" content="0" />
  <style>
    /* Inline critical overrides for early paint - rest lives in style.css */
    .pre-skeleton{animation:pulse 1.2s ease-in-out infinite;background:linear-gradient(90deg,rgba(255,255,255,.05),rgba(255,255,255,.12),rgba(255,255,255,.05));background-size:200% 100%}
    @keyframes pulse{0%{background-position:0 0}100%{background-position:200% 0}}
    .layout-grid{display:grid;grid-template-columns:1fr;gap:22px}
    @media (min-width:1400px){.layout-grid{grid-template-columns: minmax(0,1.05fr) minmax(0,.95fr)}}
  </style>
</head>
<body class="dash-body">
  <!-- Global container shell -->
  <div class="dash-shell" id="dashShell">
    <!-- Sidebar -->
    <aside class="dash-sidebar" id="dashSidebar" aria-label="Primary Navigation" data-store="<%= sessionStoreType %>">
      <div class="side-top">
        <button id="sidebarToggle" class="icon-btn ghost" aria-label="Toggle sidebar" aria-expanded="true" title="Toggle sidebar">☰</button>
        <div class="brand-mini">
          <img src="/logo.png" alt="mlvs.me logo" />
          <span class="brand-text">mlvs.me</span>
        </div>
      </div>
      <nav class="side-nav" aria-label="Section">
        <div class="side-section">
          <div class="side-label">Overview</div>
          <a href="#secHealth" class="side-link" data-nav="health">Health</a>
          <a href="#secActivity" class="side-link" data-nav="activity">Activity</a>
          <a href="#secActions" class="side-link" data-nav="actions">Actions</a>
          <a href="#secCommands" class="side-link" data-nav="commands">Commands</a>
          <a href="#secTelemetry" class="side-link" data-nav="telemetry">Telemetry</a>
          <a href="#secSystem" class="side-link" data-nav="system">System</a>
          <a href="#secAbout" class="side-link" data-nav="about">About</a>
        </div>
        <div class="side-section">
          <div class="side-label">Links</div>
          <a href="/" class="side-link">Home</a>
          <a href="/api/status" target="_blank" class="side-link">Raw Status</a>
          <% if (brand.githubUrl) { %><a href="<%= brand.githubUrl %>" target="_blank" class="side-link">GitHub</a><% } %>
          <% if (brand.inviteUrl) { %><a href="<%= brand.inviteUrl %>" target="_blank" class="side-link">Invite</a><% } %>
        </div>
      </nav>
      <div class="side-footer">
        <div class="guild-box">
          <label for="guildSelect" class="muted" style="font-size:11px">Guild</label>
          <select id="guildSelect"><option value="">All guilds</option></select>
        </div>
        <div class="token-box">
          <input id="apiToken" type="password" placeholder="API token" />
          <button id="saveToken" class="btn small">Save</button>
        </div>
        <div class="muted" style="font-size:11px;line-height:1.4">Store: <span id="sessionStoreLabel"><%= sessionStoreType %></span></div>
      </div>
    </aside>
    <!-- Main area -->
    <div class="dash-main">
      <header class="dash2-header glass" role="banner">
        <div class="dash2-brand">
          <img src="/logo.png" alt="" />
          <div class="dash2-title">
            <strong>mlvs.me</strong>
            <span>Control Center</span>
          </div>
        </div>
        <div class="dash2-meta">
          <span id="d2Status" class="badge <%= status==='Online'? 'green':'red' %>"><%= status %></span>
          <span class="badge" id="storeBadge" title="Session store"><%= sessionStoreType %></span>
          <button id="d2Refresh" class="btn small" aria-label="Refresh all panels">Refresh</button>
          <label class="muted auto-box" style="display:inline-flex;gap:6px;align-items:center"><input id="d2Auto" type="checkbox" checked /> Auto</label>
        </div>
      </header>
      <main id="dashContent" class="dash2" role="main">
        <!-- ==== ULTRA-MODERN DASHBOARD OVERVIEW ==== -->
        <!-- Dashboard Welcome Hero -->
        <section class="dashboard-hero" style="background: var(--glass-light); backdrop-filter: blur(12px); border: 1px solid var(--glass-border-light); border-radius: var(--radius-3xl); padding: var(--space-8); margin-bottom: var(--space-8); text-align: center;">
          <div class="hero-content">
            <div class="hero-logo" style="margin-bottom: var(--space-4);">
              <div style="width: 64px; height: 64px; background: linear-gradient(135deg, var(--primary-500), var(--primary-600)); border-radius: var(--radius-2xl); display: flex; align-items: center; justify-content: center; margin: 0 auto; box-shadow: var(--shadow-lg);">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                  <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
                </svg>
              </div>
            </div>
            <h1 style="font-size: var(--text-3xl); font-weight: 800; color: var(--text-primary); margin-bottom: var(--space-2);">
              mlvs.me Dashboard
            </h1>
            <p style="color: var(--text-secondary); margin-bottom: var(--space-6);">
              Real-time bot monitoring and control center
            </p>
            <div class="hero-stats" style="display: flex; justify-content: center; gap: var(--space-8); flex-wrap: wrap;">
              <div class="hero-stat">
                <div class="hero-stat-value" style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-2xl); font-weight: 700; color: var(--primary-400);" id="heroGuilds"><%= guilds || '—' %></div>
                <div class="hero-stat-label" style="font-size: var(--text-sm); color: var(--text-muted);">Servers</div>
              </div>
              <div class="hero-stat">
                <div class="hero-stat-value" style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-2xl); font-weight: 700; color: var(--emerald-400);" id="heroUsers"><%= users || '—' %></div>
                <div class="hero-stat-label" style="font-size: var(--text-sm); color: var(--text-muted);">Users</div>
              </div>
              <div class="hero-stat">
                <div class="hero-stat-value" style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-2xl); font-weight: 700; color: var(--blue-400);" id="heroStatus">
                  <span class="badge <%= status==='Online'? 'green':'red' %>"><%= status || 'Unknown' %></span>
                </div>
                <div class="hero-stat-label" style="font-size: var(--text-sm); color: var(--text-muted);">Status</div>
              </div>
            </div>
          </div>
        </section>
        
        <!-- Main Dashboard Grid -->
        <div class="dashboard-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--space-8); margin-bottom: var(--space-8);">
          
          <!-- System Health Overview -->
          <section class="panel glass" id="secHealth">
            <div class="panel-head">
              <h3 style="display: flex; align-items: center; gap: var(--space-3);">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                </svg>
                System Health
              </h3>
              <div class="panel-actions">
                <span class="badge" style="font-size:11px">Bot: <span id="d2Bot"><%= botName || 'mlvs.me' %></span></span>
              </div>
            </div>
            <div class="health-metrics" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: var(--space-4); margin-bottom: var(--space-6);">
              <div class="metric-card glass-lite" style="padding: var(--space-4); border-radius: var(--radius-2xl); text-align: center;">
                <div class="metric-icon" style="width: 32px; height: 32px; background: linear-gradient(135deg, var(--blue-500/20), var(--blue-600/30)); color: var(--blue-400); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-2);">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12,6 12,12 16,14"/>
                  </svg>
                </div>
                <div class="metric-label" style="font-size: var(--text-xs); color: var(--text-muted); margin-bottom: var(--space-1);">Latency</div>
                <div class="metric-value" style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-lg); font-weight: 700; color: var(--text-primary);" id="mLatency">— ms</div>
              </div>
              <div class="metric-card glass-lite" style="padding: var(--space-4); border-radius: var(--radius-2xl); text-align: center;">
                <div class="metric-icon" style="width: 32px; height: 32px; background: linear-gradient(135deg, var(--emerald-500/20), var(--emerald-600/30)); color: var(--emerald-400); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-2);">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
                    <line x1="8" y1="21" x2="16" y2="21"/>
                    <line x1="12" y1="17" x2="12" y2="21"/>
                  </svg>
                </div>
                <div class="metric-label" style="font-size: var(--text-xs); color: var(--text-muted); margin-bottom: var(--space-1);">Memory</div>
                <div class="metric-value" style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-lg); font-weight: 700; color: var(--text-primary);" id="mMemory">— MB</div>
              </div>
              <div class="metric-card glass-lite" style="padding: var(--space-4); border-radius: var(--radius-2xl); text-align: center;">
                <div class="metric-icon" style="width: 32px; height: 32px; background: linear-gradient(135deg, var(--orange-500/20), var(--orange-600/30)); color: var(--orange-400); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-2);">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="4" y="4" width="16" height="16" rx="2" ry="2"/>
                    <rect x="9" y="9" width="6" height="6"/>
                    <line x1="9" y1="1" x2="9" y2="4"/>
                    <line x1="15" y1="1" x2="15" y2="4"/>
                  </svg>
                </div>
                <div class="metric-label" style="font-size: var(--text-xs); color: var(--text-muted); margin-bottom: var(--space-1);">CPU</div>
                <div class="metric-value" style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-lg); font-weight: 700; color: var(--text-primary);" id="mCpu">— %</div>
              </div>
            </div>
            <div class="system-info" style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--space-3);">
              <div class="info-item" style="padding: var(--space-3); background: var(--glass-medium); border-radius: var(--radius-lg);">
                <div style="font-size: var(--text-xs); color: var(--text-muted); margin-bottom: var(--space-1);">Session Store</div>
                <div style="font-family: 'JetBrains Mono', monospace; color: var(--text-primary); font-weight: 600;"><%= sessionStoreType %></div>
              </div>
              <div class="info-item" style="padding: var(--space-3); background: var(--glass-medium); border-radius: var(--radius-lg);">
                <div style="font-size: var(--text-xs); color: var(--text-muted); margin-bottom: var(--space-1);">Updated</div>
                <div style="font-family: 'JetBrains Mono', monospace; color: var(--text-primary); font-weight: 600;" id="d2Updated"><%= updatedAt || '—' %></div>
              </div>
            </div>
          </section>
          
          <!-- Recent Activity -->
          <section class="panel glass" id="secActivity">
            <div class="panel-head">
              <h3 style="display: flex; align-items: center; gap: var(--space-3);">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="22,12 18,12 15,21 9,3 6,12 2,12"/>
                </svg>
                Recent Activity
              </h3>
              <div class="panel-actions">
                <button class="btn small" id="actRefresh">Refresh</button>
              </div>
            </div>
            <div class="activity-container" style="max-height: 280px; overflow-y: auto;">
              <ul id="d2Activity" class="activity-list" style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: var(--space-2);" aria-live="polite">
                <li class="activity-item" style="padding: var(--space-3); background: var(--glass-medium); border-radius: var(--radius-lg); display: flex; align-items: center; gap: var(--space-3);">
                  <div class="activity-icon" style="width: 24px; height: 24px; background: var(--blue-500/20); color: var(--blue-400); border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M9 12l2 2 4-4"/>
                    </svg>
                  </div>
                  <div class="activity-content" style="flex: 1; min-width: 0;">
                    <div class="activity-text" style="color: var(--text-primary); font-size: var(--text-sm);">System initialized successfully</div>
                    <div class="activity-time" style="color: var(--text-muted); font-size: var(--text-xs);">Just now</div>
                  </div>
                </li>
              </ul>
            </div>
          </section>
        </div>
        
        <!-- Quick Actions & Commands -->
        <div class="dashboard-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--space-8); margin-bottom: var(--space-8);">
          
          <!-- Quick Actions -->
          <section class="panel glass" id="secActions">
            <div class="panel-head">
              <h3 style="display: flex; align-items: center; gap: var(--space-3);">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
                Quick Actions
              </h3>
            </div>
            <div class="actions-grid" style="display: grid; gap: var(--space-4);">
              <form id="presenceForm" class="form" style="padding: var(--space-4); background: var(--glass-medium); border-radius: var(--radius-2xl);">
                <h4 style="margin: 0 0 var(--space-3) 0; color: var(--text-primary);">Bot Presence</h4>
                <div class="form-grid" style="display: grid; gap: var(--space-3);">
                  <div class="form-row">
                    <label for="presenceStatus" style="font-size: var(--text-sm); color: var(--text-muted); margin-bottom: var(--space-1);">Status</label>
                    <select id="presenceStatus" name="status" required style="width: 100%; padding: var(--space-2); background: var(--glass-light); border: 1px solid var(--glass-border); border-radius: var(--radius-lg); color: var(--text-primary);">
                      <option value="online">online</option>
                      <option value="idle">idle</option>
                      <option value="dnd">dnd</option>
                      <option value="invisible">invisible</option>
                    </select>
                  </div>
                  <div class="form-row">
                    <label for="presenceActivity" style="font-size: var(--text-sm); color: var(--text-muted); margin-bottom: var(--space-1);">Activity</label>
                    <input id="presenceActivity" name="activity" placeholder="Playing mlvs.me" style="width: 100%; padding: var(--space-2); background: var(--glass-light); border: 1px solid var(--glass-border); border-radius: var(--radius-lg); color: var(--text-primary);" />
                  </div>
                  <button class="btn" type="submit" style="margin-top: var(--space-2);">Update Presence</button>
                </div>
              </form>
            </div>
          </section>
          
          <!-- Command Overview -->
          <section class="panel glass" id="secCommands">
            <div class="panel-head">
              <h3 style="display: flex; align-items: center; gap: var(--space-3);">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="4,17 10,11 4,5"/>
                  <line x1="12" y1="19" x2="20" y2="19"/>
                </svg>
                Commands Overview
              </h3>
              <div class="panel-actions">
                <input id="cmdFilter" class="input-lite" placeholder="Filter commands" style="padding: var(--space-2); background: var(--glass-medium); border: 1px solid var(--glass-border); border-radius: var(--radius-lg); color: var(--text-primary); font-size: var(--text-sm);" />
              </div>
            </div>
            <div class="commands-summary" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: var(--space-3); margin-bottom: var(--space-4);">
              <div class="command-stat" style="padding: var(--space-3); background: var(--glass-medium); border-radius: var(--radius-lg); text-align: center;">
                <div style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-xl); font-weight: 700; color: var(--primary-400);" id="cmdGroupCount">—</div>
                <div style="font-size: var(--text-xs); color: var(--text-muted);">Groups</div>
              </div>
              <div class="command-stat" style="padding: var(--space-3); background: var(--glass-medium); border-radius: var(--radius-lg); text-align: center;">
                <div style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-xl); font-weight: 700; color: var(--emerald-400);" id="cmdTotalCount">—</div>
                <div style="font-size: var(--text-xs); color: var(--text-muted);">Total</div>
              </div>
              <div class="command-stat" style="padding: var(--space-3); background: var(--glass-medium); border-radius: var(--radius-lg); text-align: center;">
                <div style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-xl); font-weight: 700; color: var(--blue-400);" id="cmdActiveCount">—</div>
                <div style="font-size: var(--text-xs); color: var(--text-muted);">Active</div>
              </div>
            </div>
            <div id="cmdList" class="cmd-list" style="max-height: 200px; overflow-y: auto;" role="list">
              <!-- Commands will be populated here -->
            </div>
          </section>
        </div>
        
        <!-- System Overview -->
        <section class="panel glass" style="margin-bottom: var(--space-8);" id="secSystem">
          <div class="panel-head">
            <h3 style="display: flex; align-items: center; gap: var(--space-3);">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
                <line x1="8" y1="21" x2="16" y2="21"/>
                <line x1="12" y1="17" x2="12" y2="21"/>
              </svg>
              System Overview
            </h3>
            <div class="panel-actions">
              <button class="btn small" id="sysRefresh">Refresh</button>
            </div>
          </div>
          <div class="system-grid" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: var(--space-4);">
            <div class="system-card" style="padding: var(--space-4); background: var(--glass-medium); border-radius: var(--radius-2xl); text-align: center;">
              <div class="system-icon" style="width: 40px; height: 40px; background: linear-gradient(135deg, var(--emerald-500/20), var(--emerald-600/30)); color: var(--emerald-400); border-radius: var(--radius-xl); display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-3);">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12,6 12,12 16,14"/>
                </svg>
              </div>
              <div class="system-label" style="font-size: var(--text-xs); color: var(--text-muted); margin-bottom: var(--space-1);">Uptime</div>
              <div class="system-value" style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-lg); font-weight: 700; color: var(--text-primary);" id="sysUptime">—</div>
            </div>
            <div class="system-card" style="padding: var(--space-4); background: var(--glass-medium); border-radius: var(--radius-2xl); text-align: center;">
              <div class="system-icon" style="width: 40px; height: 40px; background: linear-gradient(135deg, var(--blue-500/20), var(--blue-600/30)); color: var(--blue-400); border-radius: var(--radius-xl); display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-3);">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 20V10"/>
                  <path d="M18 20V4"/>
                  <path d="M6 20v-4"/>
                </svg>
              </div>
              <div class="system-label" style="font-size: var(--text-xs); color: var(--text-muted); margin-bottom: var(--space-1);">Queue</div>
              <div class="system-value" style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-lg); font-weight: 700; color: var(--text-primary);" id="sysQueues">—</div>
            </div>
            <div class="system-card" style="padding: var(--space-4); background: var(--glass-medium); border-radius: var(--radius-2xl); text-align: center;">
              <div class="system-icon" style="width: 40px; height: 40px; background: linear-gradient(135deg, var(--purple-500/20), var(--purple-600/30)); color: var(--purple-400); border-radius: var(--radius-xl); display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-3);">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M8 2v4"/>
                  <path d="M16 2v4"/>
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                  <path d="M3 10h18"/>
                </svg>
              </div>
              <div class="system-label" style="font-size: var(--text-xs); color: var(--text-muted); margin-bottom: var(--space-1);">Last Sync</div>
              <div class="system-value" style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-lg); font-weight: 700; color: var(--text-primary);" id="sysLastSync">—</div>
            </div>
            <div class="system-card" style="padding: var(--space-4); background: var(--glass-medium); border-radius: var(--radius-2xl); text-align: center;">
              <div class="system-icon" style="width: 40px; height: 40px; background: linear-gradient(135deg, var(--orange-500/20), var(--orange-600/30)); color: var(--orange-400); border-radius: var(--radius-xl); display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-3);">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <ellipse cx="12" cy="5" rx="9" ry="3"/>
                  <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/>
                  <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/>
                </svg>
              </div>
              <div class="system-label" style="font-size: var(--text-xs); color: var(--text-muted); margin-bottom: var(--space-1);">Store</div>
              <div class="system-value" style="font-family: 'JetBrains Mono', monospace; font-size: var(--text-lg); font-weight: 700; color: var(--text-primary);" id="sysStore"><%= sessionStoreType %></div>
            </div>
          </div>
        </section>
        <footer class="footer dash-footer" style="margin-top: var(--space-8); padding: var(--space-6); background: var(--glass-light); backdrop-filter: blur(8px); border: 1px solid var(--glass-border-light); border-radius: var(--radius-3xl); text-align: center;">
          <div class="footer-row" style="display: flex; justify-content: space-between; align-items: center;">
            <div style="color: var(--text-muted); font-size: var(--text-sm);">© <%= new Date().getFullYear() %> mlvs.me</div>
            <div style="display:flex;gap:var(--space-3);align-items:center">
              <span class="badge <%= status==='Online'?'green':'red' %>"><%= status %></span>
              <span class="badge" id="footerStore"><%= sessionStoreType %></span>
              <span class="badge" style="background: var(--primary-500/20); color: var(--primary-400);">Auto Refresh: <span id="autoState">On</span></span>
            </div>
          </div>
        </footer>
      </main>
    </div>
  </div>
  <script src="/dashboard.js" defer></script>
  
  <style>
    /* Additional dashboard-specific styles */
    .dashboard-grid {
      animation: slideInUp 0.4s var(--ease-spring);
    }
    
    .dashboard-hero {
      animation: slideInUp 0.3s var(--ease-spring);
    }
    
    .panel.glass {
      animation: slideInUp 0.5s var(--ease-spring);
    }
    
    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Fix scrolling issues */
    .dash-main {
      height: 100vh;
      overflow-y: auto;
      padding: var(--space-6);
    }
    
    @media (max-width: 1024px) {
      .dashboard-grid {
        grid-template-columns: 1fr;
        gap: var(--space-6);
      }
      
      .system-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    @media (max-width: 768px) {
      .hero-stats {
        gap: var(--space-4);
      }
      
      .system-grid {
        grid-template-columns: 1fr;
      }
      
      .commands-summary {
        grid-template-columns: 1fr;
      }
    }
  </style>
</body>
</html>
