<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>mlvs.me — Control Center</title>
    <link rel="stylesheet" href="/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
  </head>
  <body>
    <header class="dash2-header">
      <div class="dash2-brand">
        <img src="/logo.png" alt="" />
        <div class="dash2-title">
          <strong>mlvs.me</strong>
          <span>Control Center</span>
        </div>
      </div>
      <div class="dash2-meta">
        <span id="d2Status" class="badge <%= status==='Online'?'green':'red' %>"><%= status %></span>
        <a class="pill small" href="/" style="margin-left:8px">Home</a>
        <a class="pill small" href="/api/status" target="_blank" style="margin-left:8px">Health</a>
        <div class="token-box">
          <input id="apiToken" type="password" placeholder="API token (optional)" />
          <button id="saveToken" class="btn small">Save</button>
        </div>
      </div>
    </header>

    <main class="dash2">
      <section class="dash2-row stats">
        <div class="stat">
          <div class="stat-label">Servers</div>
          <div class="stat-value" id="d2Guilds"><%= guilds %></div>
        </div>
        <div class="stat">
          <div class="stat-label">Users</div>
          <div class="stat-value" id="d2Users"><%= users %></div>
        </div>
        <div class="stat">
          <div class="stat-label">Updated</div>
          <div class="stat-value" id="d2Updated"><%= updatedAt || '—' %></div>
        </div>
        <div class="stat">
          <div class="stat-label">Bot</div>
          <div class="stat-value" id="d2Bot"><%= botName %></div>
        </div>
      </section>

      <section class="dash2-grid">
        <div class="panel metrics">
          <div class="panel-head">
            <h3>Metrics</h3>
            <div class="panel-actions">
              <button id="d2Refresh" class="btn small">Refresh</button>
              <label class="muted" style="display:inline-flex; gap:6px; align-items:center"><input id="d2Auto" type="checkbox" checked /> Auto</label>
            </div>
          </div>
          <div class="metric-row">
            <div class="metric-card">
              <div class="metric-label">Latency</div>
              <div class="metric-value" id="mLatency">— ms</div>
              <svg id="spLatency" viewBox="0 0 160 44" preserveAspectRatio="none"></svg>
            </div>
            <div class="metric-card">
              <div class="metric-label">Memory</div>
              <div class="metric-value" id="mMemory">— MB</div>
              <svg id="spMemory" viewBox="0 0 160 44" preserveAspectRatio="none"></svg>
            </div>
            <div class="metric-card">
              <div class="metric-label">CPU</div>
              <div class="metric-value" id="mCpu">— %</div>
              <svg id="spCpu" viewBox="0 0 160 44" preserveAspectRatio="none"></svg>
            </div>
          </div>
        </div>

        <div class="panel commands">
          <div class="panel-head">
            <h3>Commands</h3>
            <input id="cmdFilter" class="input-lite" placeholder="Filter" />
          </div>
          <div id="cmdList" class="cmd-list"></div>
        </div>

        <div class="panel actions">
          <div class="panel-head"><h3>Quick Actions</h3></div>
          <div class="actions-grid">
            <form id="presenceForm" class="form">
              <div class="form-row">
                <label>Presence</label>
                <select name="status" required>
                  <option value="online">online</option>
                  <option value="idle">idle</option>
                  <option value="dnd">dnd</option>
                  <option value="invisible">invisible</option>
                </select>
              </div>
              <div class="form-row">
                <label>Activity</label>
                <input name="activity" placeholder="Playing mlvs.me" />
              </div>
              <button class="btn" type="submit">Set Presence</button>
            </form>

            <form id="announceForm" class="form">
              <div class="form-row">
                <label>Guild ID</label>
                <input name="guildId" required />
              </div>
              <div class="form-row">
                <label>Channel ID</label>
                <input name="channelId" required />
              </div>
              <div class="form-row">
                <label>Message</label>
                <textarea name="message" rows="3" required placeholder="Hello from mlvs.me"></textarea>
              </div>
              <button class="btn" type="submit">Queue Announcement</button>
            </form>
          </div>
        </div>

        <div class="panel activity">
          <div class="panel-head"><h3>Recent Activity</h3></div>
          <ul id="d2Activity" class="activity-list"></ul>
        </div>
      </section>
    </main>

    <footer class="footer">
      <div class="container" style="display:flex;justify-content:space-between;align-items:center;gap:12px">
        <div>© <%= new Date().getFullYear() %> <%= brand.title %></div>
        <div><span class="badge <%= status==='Online'?'green':'red' %>"><%= status %></span></div>
      </div>
    </footer>

    <script src="/dashboard.js"></script>
  </body>
</html>
