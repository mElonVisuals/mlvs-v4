<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MLVS Dashboard - <%= page.charAt(0).toUpperCase()+page.slice(1) %></title>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600&family=Orbitron:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <!-- Styles -->
  <link rel="stylesheet" href="/dashboard.css">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="https://cdn.discordapp.com/attachments/1335734480253747297/1402442222816989346/logoglow.png">
</head>
<body>
  <!-- Animated Background -->
  <div class="dashboard-bg"></div>

  <!-- Dashboard Container -->
  <div class="dashboard">
    <!-- Sidebar -->
    <aside class="sidebar">
      <!-- Logo Section -->
      <div class="sidebar-header">
        <div class="logo brand-with-image">
          <img src="https://cdn.discordapp.com/attachments/1335734480253747297/1402442222816989346/logoglow.png" alt="MLVS Logo" class="logo-img" />
          <span class="logo-text">MLVS.me</span>
        </div>
        <div class="logo-subtitle">Bot Dashboard</div>
      </div>

      <!-- Navigation -->
      <nav class="nav">
        <div class="nav-section">
          <div class="nav-title nav-category">Overview</div>
          <a href="/dashboard" class="nav-link <%= page==='dashboard'?'active':'' %>">
            <span>Dashboard</span>
          </a>
          <a href="/dashboard/health" class="nav-link <%= page==='health'?'active':'' %>">
            <span>Health Monitor</span>
          </a>
        </div>
        
        <div class="nav-section">
          <div class="nav-title nav-category category-accent">Analytics</div>
          <a href="/dashboard/activity" class="nav-link <%= page==='activity'?'active':'' %>">
            <span>Live Activity</span>
          </a>
          <a href="/dashboard/system" class="nav-link <%= page==='system'?'active':'' %>">
            <span>System Stats</span>
          </a>
        </div>
        
        <div class="nav-section">
          <div class="nav-title nav-category">Management</div>
          <a href="/dashboard/commands" class="nav-link <%= page==='commands'?'active':'' %>">
            <span>Commands</span>
          </a>
          <a href="/dashboard/settings" class="nav-link <%= page==='settings'?'active':'' %>">
            <span>Settings</span>
          </a>
        </div>
      </nav>

      <!-- Status Footer -->
      <div class="sidebar-footer">
        <div class="status-indicator">
          <div class="status-dot"></div>
          <span class="status-text">Connecting...</span>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <!-- Header -->
      <header class="header">
        <h1 class="header-title"><%= page.charAt(0).toUpperCase()+page.slice(1) %></h1>
        <div class="header-actions">
          <button class="btn btn-secondary" data-refresh="all">Refresh</button>
          <a href="/logout" class="btn btn-primary">Logout</a>
        </div>
      </header>

      <!-- Content -->
      <div class="content">
        <%- body %>
      </div>
    </main>
  </div>

  <!-- Scripts -->
  <script src="/dashboard.js"></script>
  <script src="/dashboard-shared.js"></script>
  <script>
    window.ICONS = Object.assign({
      'hand-wave':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><path d="M9 3l1 5"/><path d="M15 3l-1 5"/><path d="M5 8l2 4 2 8h6l2-8 2-4"/></svg>',
      'guilds':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><rect x="3" y="5" width="18" height="14" rx="2"/><path d="M7 5v14"/><path d="M17 5v14"/></svg>',
      'performance':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><circle cx="12" cy="12" r="9"/><path d="M12 12 17 7"/><path d="M12 3v3"/><path d="M12 18v3"/><path d="M3 12h3"/><path d="M18 12h3"/></svg>',
      'commands':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><path d="M8 7h8M8 12h8M8 17h5"/><rect x="3" y="4" width="18" height="16" rx="2"/></svg>',
      'robot':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><rect x="5" y="8" width="14" height="10" rx="2"/><path d="M9 8V5h6v3"/><circle cx="9" cy="13" r="1"/><circle cx="15" cy="13" r="1"/><path d="M12 18v3"/></svg>',
      'stats':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><path d="M4 20V8"/><path d="M10 20V4"/><path d="M16 20v-6"/><path d="M22 20v-2"/></svg>',
      'settings':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 8 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 1 1-2.83-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82A1.65 1.65 0 0 0 2.09 14H2a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 3 8.6a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 1 1 2.83-2.83l.06.06A1.65 1.65 0 0 0 8 3.09V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 .33 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 1 1 2.83 2.83l-.06.06c-.48.48-.61 1.19-.33 1.82.28.63.89 1.04 1.56 1.07H22a2 2 0 0 1 0 4h-.09c-.67.03-1.28.44-1.56 1.07Z"/></svg>',
      'rocket':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><path d="M4 15s1-4 5-8 8-5 8-5 1 4-3 8-10 5-10 5Z"/><path d="M6 18c1.5-1.5 3.5-2 3.5-2s-.5 2-2 3.5S3 22 3 22s1.5-2 3-4Z"/></svg>',
      'system':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><rect x="3" y="4" width="18" height="14" rx="2"/><path d="M8 20h8"/></svg>',
      'palette':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><path d="M12 3a9 9 0 1 0 9 9c0-.6-.4-1-1-1h-3.5a1.5 1.5 0 0 1-1.4-2 1.5 1.5 0 0 0-1.3-2H12Z"/><circle cx="6.5" cy="11.5" r="1"/><circle cx="9.5" cy="7.5" r="1"/><circle cx="14.5" cy="7.5" r="1"/><circle cx="17.5" cy="11.5" r="1"/></svg>',
      'bell':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/><path d="M10 21h4"/></svg>',
  'lock':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><rect x="5" y="11" width="14" height="9" rx="2"/><path d="M8 11V8a4 4 0 0 1 8 0v3"/></svg>',
  'warning':'<svg viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.8"><path d="M12 2 2 22h20L12 2Z"/><path d="M12 9v5"/><path d="M12 17h.01"/></svg>'
    }, window.ICONS||{});
    window.addEventListener('DOMContentLoaded',()=>{ document.querySelectorAll('.ui-icon').forEach(el=>{ const k=el.getAttribute('data-icon'); if(window.ICONS[k]) el.innerHTML=window.ICONS[k]; }); });
  </script>
  <style>
    /* Brand logo styling */
    .brand-with-image { display:flex; align-items:center; gap:.55rem; font-size:1rem; font-weight:600; letter-spacing:.5px; }
    .logo-img { width:28px; height:28px; object-fit:contain; filter: drop-shadow(0 0 6px hsl(var(--primary) / 0.5)); }
    .logo-text { background:linear-gradient(90deg,hsl(var(--foreground)),hsl(var(--primary))); -webkit-background-clip:text; background-clip:text; color:transparent; }
    /* Emoji / inline icon normalization */
    .card-icon, .activity-avatar, .nav-link span, .overview-stat, .overview-badge { --emoji-size: 1em; }
    .card-icon, .activity-avatar { font-size: clamp(.9rem,1.1vw,1.15rem); line-height:1; }
    .card-icon:has(img), .activity-avatar:has(img) { display:flex; }
    .content :is(h1,h2,h3,h4) span.emoji, .content .emoji { font-size:1em; line-height:1; display:inline-flex; align-items:center; }
    /* Nav categories emphasis */
    .nav-category { position:relative; font-weight:600; letter-spacing:.08em; font-size:.62rem; text-transform:uppercase; color:hsl(var(--muted-foreground)); padding-left:.75rem; margin-bottom:.4rem; }
    .nav-category:before { content:""; position:absolute; left:0; top:50%; width:4px; height:10px; border-radius:2px; background:hsl(var(--primary)); transform:translateY(-50%); box-shadow:0 0 8px hsl(var(--primary) / 0.8); }
    .category-accent { color:hsl(var(--primary)); }
    .category-accent:before { background:linear-gradient(180deg,hsl(var(--primary)),hsl(var(--neon-accent))); }
    /* Settings link badge spacing adjustment (BOT ONLINE) */
    .sidebar-footer { margin-top:1.75rem; }
    .sidebar-footer .status-indicator { padding:.55rem .9rem .55rem .6rem; border-radius: 16px; background: linear-gradient(135deg,hsl(var(--secondary)),hsl(var(--secondary) / 0.6)); border:1px solid hsl(var(--border)); gap:.55rem; position:relative; overflow:hidden; }
    .sidebar-footer .status-indicator:before { content:""; position:absolute; inset:0; background:radial-gradient(circle at 20% 30%,hsl(var(--primary) / 0.25),transparent 70%); opacity:.55; }
    .sidebar-footer .status-text { font-size:.62rem; letter-spacing:.06em; font-weight:600; text-transform:uppercase; background:linear-gradient(90deg,hsl(var(--foreground)),hsl(var(--primary))); -webkit-background-clip:text; background-clip:text; color:transparent; }
    .sidebar-footer .status-dot { box-shadow:0 0 0 0 hsl(var(--success)); animation: pulseStatus 2.4s ease-in-out infinite; }
    @keyframes pulseStatus { 0%{ box-shadow:0 0 0 0 hsl(var(--success) / .5);} 70%{ box-shadow:0 0 0 8px hsl(var(--success) / 0);} 100%{ box-shadow:0 0 0 0 hsl(var(--success) / 0);} }
    /* Light theme variant */
    :root.theme-light { --background: 210 30% 98%; --foreground: 222 47% 11%; --muted: 210 40% 96%; --muted-foreground: 215 16% 46%; --card: 0 0% 100%; --card-foreground: 222 47% 11%; --border: 214 32% 91%; --secondary: 210 40% 96%; --secondary-foreground: 222 47% 11%; --accent: 210 40% 96%; --accent-foreground: 222 47% 11%; }
    .theme-toggle { cursor:pointer; border:1px solid hsl(var(--border)); background:hsl(var(--secondary)); padding:.4rem .7rem; border-radius: var(--radius); font-size:.65rem; text-transform:uppercase; letter-spacing:.08em; font-weight:600; }
  </style>
  <script>
    document.addEventListener('DOMContentLoaded',()=>{
      const headerActions=document.querySelector('.header-actions');
      if(headerActions){
        const btn=document.createElement('button');
        btn.className='theme-toggle';
        btn.textContent='Light';
        btn.addEventListener('click',()=>{
          const root=document.documentElement; root.classList.toggle('theme-light');
          btn.textContent = root.classList.contains('theme-light')? 'Dark':'Light';
        });
        headerActions.prepend(btn);
      }
    });
  </script>
  </style>
</body>
</html>
