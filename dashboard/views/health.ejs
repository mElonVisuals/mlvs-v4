<!-- Bot Status Overview -->
<div class="dashboard-grid">
  <!-- Bot Status Card -->
  <div class="card metric-card">
    <div class="card-header">
      <h3 class="card-title">Bot Status</h3>
      <div class="card-icon">🤖</div>
    </div>
    <div class="card-content">
      <div class="metric-value" id="bot-status">Connecting...</div>
      <div class="metric-label">Current Status</div>
    </div>
  </div>

  <!-- Guild Count -->
  <div class="card metric-card">
    <div class="card-header">
      <h3 class="card-title">Guild Count</h3>
      <div class="card-icon">🏘️</div>
    </div>
    <div class="card-content">
      <div class="metric-value" id="guild-count">0</div>
      <div class="metric-label">Connected Servers</div>
      <div class="metric-change positive">+2 this week</div>
    </div>
  </div>

  <!-- User Count -->
  <div class="card metric-card">
    <div class="card-header">
      <h3 class="card-title">User Count</h3>
      <div class="card-icon">👥</div>
    </div>
    <div class="card-content">
      <div class="metric-value" id="user-count">0</div>
      <div class="metric-label">Total Users</div>
      <div class="metric-change positive">+15% growth</div>
    </div>
  </div>

  <!-- Latency -->
  <div class="card metric-card">
    <div class="card-header">
      <h3 class="card-title">Latency</h3>
      <div class="card-icon">⚡</div>
    </div>
    <div class="card-content">
      <div class="metric-value" id="latency">0ms</div>
      <div class="metric-label">Response Time</div>
      <div class="sparkline" id="latency-chart"></div>
    </div>
  </div>
</div>

<!-- System Performance -->
<div class="dashboard-grid">
  <!-- Memory Usage -->
  <div class="card metric-card">
    <div class="card-header">
      <h3 class="card-title">Memory Usage</h3>
      <div class="card-icon">💾</div>
    </div>
    <div class="card-content">
      <div class="metric-value" id="memory-usage">0MB</div>
      <div class="metric-label">RAM Consumption</div>
      <div class="sparkline" id="memory-chart"></div>
    </div>
  </div>

  <!-- CPU Usage -->
  <div class="card metric-card">
    <div class="card-header">
      <h3 class="card-title">CPU Usage</h3>
      <div class="card-icon">🖥️</div>
    </div>
    <div class="card-content">
      <div class="metric-value" id="cpu-usage">0%</div>
      <div class="metric-label">Processor Load</div>
      <div class="sparkline" id="cpu-chart"></div>
    </div>
  </div>

  <!-- Uptime -->
  <div class="card metric-card">
    <div class="card-header">
      <h3 class="card-title">Uptime</h3>
      <div class="card-icon">⏰</div>
    </div>
    <div class="card-content">
      <div class="metric-value" id="uptime">0m</div>
      <div class="metric-label">Online Duration</div>
      <div class="metric-change positive">99.9% availability</div>
    </div>
  </div>

  <!-- Bot Version -->
  <div class="card metric-card">
    <div class="card-header">
      <h3 class="card-title">Version</h3>
      <div class="card-icon">🔢</div>
    </div>
    <div class="card-content">
      <div class="metric-value" id="bot-version">5.0.0</div>
      <div class="metric-label">Current Build</div>
      <div class="metric-change neutral">Latest</div>
    </div>
  </div>
</div>

<!-- Activity Feed -->
<div class="card">
  <div class="card-header">
    <h3 class="card-title">Recent Activity</h3>
    <div class="card-icon">📊</div>
  </div>
  <div class="card-content">
    <div class="activity-feed" id="activity-feed">
      <div class="activity-item">
        <div class="activity-avatar">C</div>
        <div class="activity-content">
          <div class="activity-text">Command executed successfully</div>
          <div class="activity-time">2 minutes ago</div>
        </div>
      </div>
      <div class="activity-item">
        <div class="activity-avatar">U</div>
        <div class="activity-content">
          <div class="activity-text">User joined server</div>
          <div class="activity-time">5 minutes ago</div>
        </div>
      </div>
      <div class="activity-item">
        <div class="activity-avatar">S</div>
        <div class="activity-content">
          <div class="activity-text">System maintenance completed</div>
          <div class="activity-time">10 minutes ago</div>
        </div>
      </div>
    </div>
  </div>
</div>
